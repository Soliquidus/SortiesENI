<header id="header-wrap">
    <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar indigo">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <span class="icon-menu"></span>
                    <span class="icon-menu"></span>
                    <span class="icon-menu"></span>
                </button>
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="{{ asset('files/images/logo.png') }}" width="auto" height="auto" class="d-inline-block align-top" alt="">
                </a>
            </div>
            <div class="collapse navbar-collapse" id="main-navbar">
                <ul class="onepage-nev navbar-nav mr-auto w-100 justify-content-end clearfix">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('users') }}">{% trans %}Users{% endtrans %}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('eventsAdmin') }}">{% trans %}Happenings{% endtrans %}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('cities') }}">{% trans %}Cities{% endtrans %}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('campus') }}">{% trans %}Campuses{% endtrans %}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('addresses') }}">{% trans %}Addresses{% endtrans %}</a></li>
                        {% endif %}
                        <li class="nav-item {% if current_path == 'events' %} active {% endif %}">
                            <a class="nav-link" href="{{ path('events') }}">{% trans %}Events{% endtrans %}</a></li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {% if app.user.picture is not null %}
                                    <img class="img-profile rounded-circle" src="{{ asset('files/images/users/' ~ app.user.picture) }}" style="max-width: 2.5rem" alt=""> |
                                    {{ app.user.username }}
                                {% else %}
                                    <i class="fas fa-user-circle"></i> {{ app.user.username }}
                                {% endif %}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="{{ path('profile') }}">{% trans %}Profile{% endtrans %}</a>
                                <a class="dropdown-item text-danger" href="{{ path('security_logout') }}">{% trans %}Logout{% endtrans %}</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item {% if current_path == 'security_login' %} active {% endif %}">
                            <a class="nav-link" href="{{ path('security_login') }}"><i class="icon-login"> </i> {% trans %}Login{% endtrans %}</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
        <ul >
            {% for locale in locales %}
                {% if locale != app.request.locale %}
                    {% if locale == 'en' %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('change_locale', {'locale': locale}) }}">English</a></li>
                    {% endif %}
                    {% if locale == 'fr' %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('change_locale', {'locale': locale}) }}">Fran√ßais</a></li>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
        <!-- Menu mobile -->
        <ul class="onepage-nev mobile-menu">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('users') }}">{% trans %}Users{% endtrans %}</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('eventsAdmin') }}">{% trans %}Happenings{% endtrans %}</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('cities') }}">{% trans %}Cities{% endtrans %}</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('campus') }}">{% trans %}Campuses{% endtrans %}</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('addresses') }}">{% trans %}Addresses{% endtrans %}</a></li>
                {% endif %}
                <li class="nav-item {% if current_path == 'events' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('events') }}">{% trans %}Events{% endtrans %}</a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% if app.user.picture is not null %}
                            <img class="img-profile rounded-circle" src="{{ asset('files/images/users/' ~ app.user.picture) }}" style="max-width: 2.5rem" alt=""> |
                            {{ app.user.username }}
                        {% else %}
                            <i class="fas fa-user-circle"></i> {{ app.user.username }}
                        {% endif %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="{{ path('profile') }}">{% trans %}Profile{% endtrans %}</a>
                        <a class="dropdown-item text-danger" href="{{ path('security_logout') }}">{% trans %}Logout{% endtrans %}</a>
                    </div>
                </li>
            {% else %}
                <li class="nav-item {% if current_path == 'security_login' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('security_login') }}"><i class="icon-login"> </i> {% trans %}Login{% endtrans %}</a></li>
            {% endif %}
        </ul>
        <!-- Fin du menu mobile -->
    </nav>
</header>