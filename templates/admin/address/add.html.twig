{% extends 'base.html.twig' %}

{% block title %}{% trans %}Add address{% endtrans %}{% endblock %}

{% block body %}
    <form method="post" action="{{ path('add_address') }}">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate','class':'form-horizontal'}}) }}
        <section id="about" class="section-padding">
            <div class="container">
                <div class="row login-row">
                    <div class="col-lg-5 col-md-5 col-sm-5 login-row">
                        <div class="education wow fadeInRight" data-wow-delay="0.3s">
                            <ul class="login">
                                <li>
                                    <i class="icon-globe"></i>
                                    <h2 class="login-title">{% trans %}Add address{% endtrans %}</h2>
                                </li>
                                <li>
                                    <div class="content-text">
                                        <h3 class="line-title">{% trans %}Address title{% endtrans %}</h3>
                                        <label class="_title"></label>{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                        <h3 class="line-title">{% trans %}Street{% endtrans %}</h3>
                                        <label class="_title"></label>{{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
                                        <h3 class="line-title">{% trans %}City{% endtrans %}</h3>
                                        <label class="_title"></label>{{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </li>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                {{ form_end(form) }}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
{% endblock %}